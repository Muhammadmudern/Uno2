<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_new_item_package"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    tools:context=".Actions.ActionButtonDialogFragmentStuffPackege">

    <ImageView
        android:id="@+id/imageViewHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/vector_go_home_on_item_page" />


    <ImageView
        android:id="@+id/imageViewLastPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="266dp"
        android:layout_weight="1"
        android:src="@drawable/open_last_page" />


    <ImageView
        android:id="@+id/imageViewPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="310dp"
        android:layout_weight="1"
        android:src="@drawable/print" />

    <LinearLayout
        android:layout_width="98dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:id="@+id/LL_add_shop_item"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/package_for_stuff"
        android:orientation="horizontal"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_coun1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="104dp"
        android:layout_height="70dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/package_for_stuff"
        android:orientation="horizontal"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_coun2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="101dp"
        android:layout_height="70dp"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/package_for_stuff"
        android:orientation="horizontal"
        android:padding="16dp">


        <TextView
            android:id="@+id/tv_coun3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="3" />

    </LinearLayout>


</androidx.cardview.widget.CardView>