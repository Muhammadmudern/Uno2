<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmePageForAddItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentShopItemCountAdd"
    android:background="@color/white"
    app:defaultNavHost = "true"
    >
    <TableLayout
        android:id="@+id/tl_for_add_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2">

        <TableRow
            android:id="@+id/top_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonTest"
                android:layout_width="69dp"
                android:layout_height="30dp"
                android:background="@color/black"
                android:text="Button" />

            <ImageView
                android:id="@+id/imageViewBackToCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="42dp"
                app:srcCompat="@drawable/vector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="Официант"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-96dp"
                android:layout_marginTop="43dp"
                android:layout_marginBottom="10dp"
                android:text="Стол2"
                android:textColor="@color/table"
                android:textSize="14dp" />


        </TableRow>
    </TableLayout>


    <TableRow
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp">

        <TextView
            android:id="@+id/nazvnyetitlecount"
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="Название"
            android:textColor="@color/grey"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/paymenttitlecount"
            android:layout_width="wrap_content"
            android:layout_marginStart="75dp"
            android:gravity="center"
            android:text="Цена"
            android:textColor="@color/grey"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/counttitlecount"
            android:layout_width="wrap_content"
            android:layout_marginStart="75dp"
            android:gravity="center"
            android:text="Количество"
            android:textColor="@color/grey"
            android:textSize="12dp" />

    </TableRow>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_for_add_count"
        android:layout_width="370dp"
        android:layout_height="508dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="140dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/buttonForAddDish"
        android:layout_width="177dp"
        android:layout_height="42dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="665dp"
        android:backgroundTint="@color/background_page"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="6dp"
        android:paddingEnd="16dp"
        android:paddingBottom="6dp"
        android:text="ДОБАВИТЬ БЛЮДО"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/background_with_shadow"
        android:showDividers="none">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="660dp" />
    </TableLayout>
</FrameLayout>