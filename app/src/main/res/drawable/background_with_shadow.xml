<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="3dp"
                android:color="#F6F6F6" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="3dp"
                android:color="#F1F1F1" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="2dp"
                android:color="#EAEAEA" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <padding
            android:top="2dp" />


        </shape>
    </item>
    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="3dp"
                android:color="#E4E4E4" />

            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

            <padding
                android:top="2dp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>